@page
@model TicketCentral.Pages.Tickets.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create a Ticket</h2>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ticket.VenueBookingID" class="control-label"></label>
                <select asp-for="Ticket.VenueBookingID" class ="form-control" asp-items="ViewBag.VenueBookingID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.CustomerID" class="control-label"></label>
                <select asp-for="Ticket.CustomerID" class ="form-control" asp-items="ViewBag.CustomerID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
