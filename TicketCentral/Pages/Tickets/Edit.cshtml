@page "{id:int?}"
@model TicketCentral.Pages.Tickets.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ticket.TicketID" />
            <div class="form-group">
                <label asp-for="Ticket.VenueBookingID" class="control-label"></label>
                <select asp-for="Ticket.VenueBookingID" class="form-control" asp-items="ViewBag.VenueBookingID"></select>
                <span asp-validation-for="Ticket.VenueBookingID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.CustomerID" class="control-label"></label>
                <select asp-for="Ticket.CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
                <span asp-validation-for="Ticket.CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
